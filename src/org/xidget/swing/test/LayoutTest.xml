<?xml version="1.0" encoding="UTF-8"?>

<script>
  <package>org.xidget.xaction</package>
  
  <create assign="xml">
    <template annotated="true">
      <xml path=".">
        <extern:cache class="org.xmodel.external.caching.FileSystemCachingPolicy"/>
      </xml>
    </template>
  </create>

  <assign name="layouts">$xml/layouts.xml/layouts</assign>  
  <create assign="form">
    <template>
      <app size="400, 400">
        <form id="1" layout="$layouts/horizontal" fill="true" pad="10">
          <form id="1a"/>
          <form id="1b"/>
        </form>
      </app>
    </template>
  </create>
  
  <xidget>$form</xidget>
</script>
