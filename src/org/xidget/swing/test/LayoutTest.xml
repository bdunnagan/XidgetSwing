<?xml version="1.0" encoding="UTF-8"?>

<script>
  <package>org.xidget.xaction</package>
  
  <create assign="xml">
    <template annotated="true">
      <xml path=".">
        <extern:cache class="org.xmodel.external.caching.FileSystemCachingPolicy"/>
      </xml>
    </template>
  </create>

  <assign name="layouts">$xml/layouts.xml/layouts</assign>  
  <create assign="form" when="false()">
    <template>
      <app size="400, 400">
        <form id="1">
          <layout>
            <script>$layouts/vgrid</script>
            <!--spacing left="6" top="6" right="6" bottom="6" peer="6"/-->
            <spacing>6</spacing>
          </layout>
          
          <form id="1a"/>
          <form id="1b"/>
        </form>
      </app>
    </template>
  </create>
  
  <create assign="form" when="true()">
    <template>
      <app size="500, -1">
        <form id="1">
          <layout>
            <script>$layouts/vfree</script>
            <!--spacing left="6" top="6" right="6" bottom="6" peer="6"/-->
            <spacing>6</spacing>
          </layout>
          
          <form id="1a" size="-1, 200"/>
          <form id="1b" size="-1, 150"/>
        </form>
      </app>
    </template>
  </create>
  
  <xidget>$form</xidget>
</script>
