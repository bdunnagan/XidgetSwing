<?xml version="1.0" encoding="UTF-8"?>

<script>
  <package>org.xidget.xaction</package>
  
  <create collection="xml">
    <template annotated="true">
      <xml path=".">
        <extern:cache class="org.xmodel.external.caching.FileSystemCachingPolicy"/>
      </xml>
    </template>
  </create>

  <create assign="fsys">
    <template annotated="true">
      <Applications path="/">
        <extern:cache class="org.xmodel.external.caching.FileSystemCachingPolicy"/>
      </Applications>
    </template>
  </create>
  
  <create assign="choices">
    <template>
      <choices>
        <choice>Time and a Word</choice>
        <choice>Relayer</choice>
        <choice>Close to the Edge</choice>
      </choices>
    </template>
  </create>

  <assign name="layouts">collection('xml')/layouts.xml/layouts</assign>  
  <create assign="form">
    <template>
      <app>
        <form id="1" layout="$layouts/vgrid" size="400, 500">
          <form id="1a" layout="$layouts/vertical">
            <text id="1">
              <label>Text1</label>
              <source>collection('appdb')/text1</source>
            </text>
            <!--text id="3" size="50,1">        
              <label>Text3</label>
              <source>collection('appdb')/text3</source>
            </text-->          
          </form>

          <form id="1b" title="'1b'" layout="$layouts/vertical" margins="5, 5, 5, 5">
            <!-- combo id="2">
              <choices>$choices/choice</choices>        
              <source>collection('appdb')/text2</source>
            </combo-->
            <text id="4">        
              <label>Text4</label>
              <source>collection('appdb')/text4</source>
            </text>          
          </form>
                    
          <trigger name="Listen" when="collection('appdb')/radio/@* = 'true'">
            <print>collection('appdb')/radio</print>
          </trigger>
        </form>
      </app>
    </template>
  </create>
  
  <create collection="appdb">
    <template>
      <appdb>
        <text1>Time and a Word</text1>
        <text2>Relayer</text2>
        <text3>Close to the Edge</text3>
        <text4>Tales From Topographic Oceans</text4>
        <radio b1="false" b2="true" b3="false"/>
      </appdb>
    </template>
  </create>
  
  <xidget>$form</xidget>
</script>
