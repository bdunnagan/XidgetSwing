<?xml version="1.0" encoding="UTF-8"?>

<script>
  <package>org.xidget.xaction</package>
  
  <create assign="xml">
    <template annotated="true">
      <xml path=".">
        <extern:cache class="org.xmodel.external.caching.FileSystemCachingPolicy"/>
      </xml>
    </template>
  </create>

  <assign name="layouts">$xml/layouts.xml/layouts</assign>
  
  <assign name="test">1</assign>
    
  <create assign="form" when="$test = '1'">
    <template>
      <app>
        <package>org.xidget.layout.xaction</package>
        
        <form id="ROOT" size="400, 400">
          <layout>
            <layoutAttach xidget="text">
              <top/>
              <left/>
              <right/>
              <bottom/>
            </layoutAttach>
          </layout>
          
          <text multiline="true">
            <source>'Text'</source>
          </text>
        </form>
      </app>
    </template>
  </create>
  
  <create assign="form" when="$test = '2'">
    <template>
      <app size="400, 400">
        <form id="ROOT" layout="$layouts/hgrid" margins="5" spacing="5" handles="true">
          <form id="LEFT"/>
          <form id="RIGHT"/>
        </form>
      </app>
    </template>
  </create>
  
  <create assign="form" when="$test = '3'">
    <template>
      <app size="500, -1">
        <form id="ROOT" layout="$layouts/vfree" margins="5" spacing="5" handles="true">
          <form id="UPPER" size="-1, 200"/>
          <form id="LOWER" size="-1, 150"/>
        </form>
      </app>
    </template>
  </create>
  
  <create assign="form" when="$test = '4'">
    <template>
      <app size="500, -1">
        <form id="ROOT" layout="$layouts/rightToLeft" margins="5" spacing="5">
          <text>
            <source>'New Text 1'</source>
          </text>
          <text>
            <source>'New Text 2'</source>
          </text>
        </form>
      </app>
    </template>
  </create>
  
  <create assign="form" when="$test = '5'">
    <template>
      <app size="500, -1">
        <form id="ROOT" layout="$layouts/vfree" margins="5" spacing="5">
          <form id="CHILD" layout="$layouts/rightToLeft">
            <text>
              <source>'New Text 1'</source>
            </text>
            <text>
              <source>'New Text 2'</source>
            </text>
          </form>
        </form>
      </app>
    </template>
  </create>
  
  <create assign="form" when="$test = '6'">
    <template>
      <app>
        <package>org.xidget.layout.xaction</package>
        <form id="ROOT" margins="5" spacing="5">
          <layout>
            <layoutTopBottom/>
            <layoutFillX/>
            <layoutPackY/>
          </layout>
            
          <form id="CHILD" title="'Title'">
            <layout>
              <layoutTopBottom/>
              <layoutFillX/>
              <layoutPackY/>
            </layout>
            
            <text>
              <source>'New Text 1'</source>
            </text>
            <text>
              <source>'New Text 2'</source>
            </text>
          </form>
        </form>
      </app>
    </template>
  </create>
  
  <create assign="form" when="$test = '7'">
    <template>
      <app>
        <package>org.xidget.layout.xaction</package>            
        <form>
          <layout>
            <layoutLeftRight/>
            <layoutAlignTop/>
            <layoutPackX/>
            <layoutPackY/>
          </layout>
          
          <text size="60, -1">
            <label>'Folder'</label>
            <source>'New Text 1'</source>
          </text>
          <button>
            <label>'B'</label>
            <onPress>
            </onPress>
          </button>
        </form>
      </app>
    </template>
  </create>
  
  <createXidget>$form</createXidget>
</script>
