<?xml version="1.0" encoding="UTF-8"?>

<script>
  <package>org.xidget.xaction</package>
  
  <create assign="xml">
    <template annotated="true">
      <xml path=".">
        <extern:cache class="org.xmodel.external.caching.FileSystemCachingPolicy"/>
      </xml>
    </template>
  </create>

  <assign name="layouts">$xml/layouts.xml/layouts</assign>
  
  <assign name="test">1</assign>
    
  <create assign="form" when="$test = '1'">
    <template>
      <app size="400, 400">
        <form id="ROOT" layout="$layouts/hgrid" margins="1,1,1,1" spacing="1" handles="true">
          <form id="UPPER"/>
          <form id="LOWER"/>
        </form>
      </app>
    </template>
  </create>
  
  <create assign="form" when="$test = '2'">
    <template>
      <app size="500, -1">
        <form id="ROOT" layout="$layouts/vfree" spacing="1" handles="true">
          <form id="UPPER" size="-1, 200"/>
          <form id="LOWER" size="-1, 150"/>
        </form>
      </app>
    </template>
  </create>
  
  <create assign="form" when="$test = '3'">
    <template>
      <app size="500, -1">
        <form id="ROOT" layout="$layouts/vfree">
          <form id="CHILD" layout="$layouts/vfree">
            <text>
              <source>'New Text'</source>
            </text>
          </form>
        </form>
      </app>
    </template>
  </create>
  
  <xidget>$form</xidget>
</script>
