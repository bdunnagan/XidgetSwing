<?xml version="1.0" encoding="UTF-8"?>

<script>
  <package>org.xidget.xaction</package>
  
  <create collection="xml">
    <template annotated="true">
      <xml path=".">
        <extern:cache class="org.xmodel.external.caching.FileSystemCachingPolicy"/>
      </xml>
    </template>
  </create>

  <create assign="fsys">
    <template annotated="true">
      <Applications path="/">
        <extern:cache class="org.xmodel.external.caching.FileSystemCachingPolicy"/>
      </Applications>
    </template>
  </create>
  
  <create assign="choices">
    <template>
      <choices>
        <choice>Time and a Word</choice>
        <choice>Relayer</choice>
        <choice>Close to the Edge</choice>
      </choices>
    </template>
  </create>

  <assign name="layouts">collection('xml')/layouts.xml/layouts</assign>  
  <create assign="form">
    <template>
      <app>
        <!-- setting the size doesn't work here because there is no dependency on form.y1 -->
        <form layout="$layouts/layout[ @id = 'vertical']">
          <text id="1">
            <label>Text1</label>
            <source>collection('appdb')/text1</source>
          </text>
  
          <combo id="2" size="50,1">
            <choices>$choices/choice</choices>        
            <source>collection('appdb')/text2</source>
          </combo>
          
          <text id="3" size="50,1">        
            <label>Text3</label>
            <source>collection('appdb')/text3</source>
          </text>
          
          <table size="600, 200">
            <column>'Name'</column>
            <column>'Value'</column>
          
            <table>
              <rows>.</rows>
              <cell>
                <source>'Folder #1'</source>
              </cell>
            </table>
            
            <table>
              <rows>$fsys</rows>
              <cell>
                <source>name()</source>
              </cell>
            </table>
            
            <table>
              <rows>if ( collection('appdb')/text2 = 'Relayer') then static( $layouts//*/@*) else null</rows>
              <cell>
                <source>name()</source>
              </cell>
              <cell>
                <source>.</source>
              </cell>
            </table>
          
            <table>
              <rows>.</rows>
              <cell>
                <source>'Folder #3'</source>
              </cell>
            </table>
            
            <table>
              <rows>$layouts//*</rows>
              <cell>
                <source>name()</source>
              </cell>
              <cell>
                <source>.</source>
              </cell>
            </table>
          </table>
            
          <trigger name="Listen" source="collection('appdb')/text2">
            <print>string( collection('appdb')/text2)</print>
          </trigger>
        </form>
      </app>
    </template>
  </create>
  
  <create collection="appdb">
    <template>
      <appdb>
        <text1>Time and a Word</text1>
        <text2>Relayer</text2>
        <text3>Close to the Edge</text3>
      </appdb>
    </template>
  </create>
  
  <xidget>$form</xidget>
</script>
