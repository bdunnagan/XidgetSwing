<?xml version="1.0" encoding="UTF-8"?>

<script>
  <package>org.xidget.xaction</package>
  
  <create collection="xml">
    <template annotated="true">
      <xml path=".">
        <extern:cache class="org.xmodel.external.caching.FileSystemCachingPolicy"/>
      </xml>
    </template>
  </create>

  <create assign="fsys">
    <template annotated="true">
      <Applications path="/">
        <extern:cache class="org.xmodel.external.caching.FileSystemCachingPolicy"/>
      </Applications>
    </template>
  </create>
  
  <create assign="choices">
    <template>
      <choices>
        <choice>Time and a Word</choice>
        <choice>Relayer</choice>
        <choice>Close to the Edge</choice>
      </choices>
    </template>
  </create>

  <assign name="layouts">collection('xml')/layouts.xml/layouts</assign>  
  <create assign="form">
    <template>
      <app>
        <!-- setting the size doesn't work here because there is no dependency on form.y1 -->
        <form layout="$layouts/layout[ @id = 'vertical']">
          <text id="1">
            <label>Text1</label>
            <source>collection('appdb')/text1</source>
          </text>
  
          <combo id="2" size="50,1">
            <choices>$choices/choice</choices>        
            <source>collection('appdb')/text2</source>
          </combo>
          
          <text id="3" size="50,1">        
            <label>Text3</label>
            <source>collection('appdb')/text3</source>
          </text>

          <!-- NEED BETTER RADIO SCHEMA -->
          <button type="radio">
            <label>Option 1</label>
            <source></source>
          </button>          
          <button type="radio">
            <label>Option 2</label>
          </button>          
          <button type="radio">
            <label>Option 3</label>
          </button>          
            
          <button type="push">
            <label>Push Me!</label>
            <buttonPressed>
              <print>'Been pushed!'</print>
            </buttonPressed>
          </button>
                    
          <trigger name="Listen" source="collection('appdb')/text2">
            <print>string( collection('appdb')/text2)</print>
          </trigger>
        </form>
      </app>
    </template>
  </create>
  
  <create collection="appdb">
    <template>
      <appdb>
        <text1>Time and a Word</text1>
        <text2>Relayer</text2>
        <text3>Close to the Edge</text3>
        <button></button>
      </appdb>
    </template>
  </create>
  
  <xidget>$form</xidget>
</script>
