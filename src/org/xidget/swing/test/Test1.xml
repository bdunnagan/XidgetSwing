<?xml version="1.0" encoding="UTF-8"?>

<script>
  <package>org.xidget.swing.xaction</package>

  <create assign="form">
    <template>
      <form>
        <layout name="default-vertical-text">
          <x0>c.x0</x0>
          <y0>p.y0</y0>
          <x1>c.x1</x1>
        </layout>
        
        <text size="100,1">
          <layout>default-vertical-text</layout>
          <source>collection('appdb')/text1</source>
        </text>
        
        <text size="100,1">        
          <layout>default-vertical-text</layout>
          <source>collection('appdb')/text2</source>
        </text>
        
        <trigger name="Listen" source="collection('appdb')/text2">
          <print>string( collection('appdb')/text2)</print>
        </trigger>
      </form>
    </template>
  </create>
  
  <create collection="appdb">
    <template>
      <appdb>
        <text1>Bob</text1>
        <text2>Expert</text2>
      </appdb>
    </template>
  </create>
  
  <xidget>$form</xidget>
</script>
